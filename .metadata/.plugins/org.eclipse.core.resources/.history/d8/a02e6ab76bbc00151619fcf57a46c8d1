
public class OptimalGuesser {
	public static int nbrGuesses(NumberToGuess n) {
		int min = n.getMin();
		int max = n.getMax();
		int guess = (max + min) / 2;
		int i = 1;
		for (; !n.isEqual(guess); i++) {
			if (n.isBiggerThan(guess))
				min = guess+1;
			else
				max = guess-1;
			guess = (max + min) / 2 ;

		}
		return i;
	}
}
