
public class OptimalGuesser {
	public int nbrGuesses(NumberToGuess n) {
		int min = n.getMin();
		int max = n.getMax();
		int guess = (max / 2 + min / 2);
		int i;
		for (; !n.isEqual(guess); i++) {
			if (n.isBiggerThan(guess))
				System.out.println("För litet, gissa igen!");
			else
				System.out.println("För stort, gissa igen!");
			guess = s.nextInt();
		}
		return i;
	}
}
